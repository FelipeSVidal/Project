#!/bin/sh
LOTUS_PATH="$(dirname "$0")"
LOTUS_JAR=$LOTUS_PATH/lotus.jar
EXTENSIONS_PATH=$LOTUS_PATH/extensions

if [ "$1" = "--debug" ]; then
	DEBUG="-Xdebug -Xnoagent -Djava.compiler=NONE -Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=5005"
fi

if [ -n "$JAVA_HOME" ]; then
  $JAVA_HOME/bin/java $DEBUG -Dlotus.extensions.path="$EXTENSIONS_PATH" -jar "$LOTUS_JAR" "$@"
else
  java -jar "$LOTUS" "$@"
fi
